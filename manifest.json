{
	"manifest_version": 3,
	"name": "HERO IA",
	"version": "2.0.0",
	"description": "HERO IA tools for WhatsApp Web (core, PDF, audio, cr√©dito).",
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"action": {
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		},
		"default_title": "HERO IA"
	},
	"permissions": ["storage", "downloads"],
	"background": {
		"service_worker": "background.js"
	},
	"host_permissions": ["https://web.whatsapp.com/*", "http://*/*", "https://*/*"],
	"content_scripts": [
		{
			"matches": ["https://web.whatsapp.com/*"],
			"js": ["content.js"],
			"css": ["style.css"],
			"run_at": "document_idle"
		}
	],
	"web_accessible_resources": [
		{
			"resources": [
				"modules/*.js",
				"services/*.js",
				"style.css",
				"icons/*.png",
				"botao.jpg"
			],
			"matches": ["https://web.whatsapp.com/*"]
		}
	]
}
